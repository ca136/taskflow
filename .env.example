# TaskFlow Root Environment Configuration

# Database Configuration
DATABASE_URL=postgresql://taskflow_user:taskflow_password@localhost:5432/taskflow
DATABASE_TEST_URL=postgresql://taskflow_user:taskflow_password@localhost:5432/taskflow_test

# Backend Server
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000

# Frontend
FRONTEND_URL=http://localhost:5173
FRONTEND_PORT=5173

# API Configuration
API_TITLE=TaskFlow API
API_VERSION=1.0.0
API_DESCRIPTION=Full-stack project management application

# Security (Backend)
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,http://127.0.0.1:5173

# Environment
ENVIRONMENT=development
DEBUG=true

# Logging
LOG_LEVEL=INFO

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@taskflow.app

# Redis (Optional, for caching)
REDIS_URL=redis://localhost:6379/0

# AWS S3 (Optional, for file uploads)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET_NAME=
AWS_REGION=us-east-1
