# TaskFlow Environment Variables Example
# Copy this file to .env and fill in your values

# Backend API Configuration
BACKEND_URL=http://localhost:8000
API_V1_STR=/api/v1

# Frontend Configuration
VITE_API_URL=http://localhost:8000/api/v1
VITE_APP_NAME=TaskFlow

# Database Configuration (Backend)
DATABASE_URL=postgresql://taskflow_user:taskflow_password@localhost/taskflow
DB_POOL_SIZE=20
DB_POOL_RECYCLE=3600

# Security (Backend)
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Configuration (Backend)
BACKEND_CORS_ORIGINS=["http://localhost:5173", "http://localhost:3000", "http://127.0.0.1:5173"]

# Redis Configuration (Optional)
REDIS_URL=redis://localhost:6379/0

# Environment
ENVIRONMENT=development
DEBUG=true

# Logging
LOG_LEVEL=INFO

# Email Configuration (Future)
MAIL_FROM_EMAIL=noreply@taskflow.dev
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=

# AWS/Cloud Configuration (Optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET_NAME=

# External APIs (Future)
SLACK_WEBHOOK_URL=
GITHUB_TOKEN=
