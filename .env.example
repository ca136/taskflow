# TaskFlow Application Configuration
# Copy this file to .env and update the values for your environment

# ================================
# Database Configuration
# ================================
# PostgreSQL connection URL
# Format: postgresql://username:password@host:port/database
# For SQLite (development): sqlite:///./taskflow.db
DATABASE_URL=postgresql://taskflow_user:taskflow_password@localhost:5432/taskflow

# PostgreSQL credentials (used in docker-compose)
DB_USER=taskflow_user
DB_PASSWORD=taskflow_password
DB_NAME=taskflow
DB_PORT=5432

# ================================
# Security Configuration
# ================================
# Secret key for JWT token signing
# IMPORTANT: Change this to a strong random string in production!
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-change-in-production

# JWT algorithm for token signing
JWT_ALGORITHM=HS256

# JWT token expiration (in hours)
JWT_EXPIRATION_HOURS=24

# Alternative: Token expiration in minutes (used in some configurations)
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ================================
# Application Configuration
# ================================
# Application name
APP_NAME=TaskFlow API

# Application version
APP_VERSION=0.0.1

# Server host address
SERVER_HOST=0.0.0.0

# Server port
SERVER_PORT=8000

# ================================
# Environment & Debugging
# ================================
# Environment type: development, staging, production
ENVIRONMENT=development

# Debug mode (true/false)
DEBUG=true

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ================================
# CORS Configuration
# ================================
# Comma-separated list of allowed origins for CORS
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:8000

# Alternatively, if using ALLOWED_ORIGINS variable:
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:8000,http://frontend:3000

# ================================
# Frontend Configuration
# ================================
# Frontend API URL (used by Vite frontend)
VITE_API_URL=http://localhost:8000

# ================================
# Docker/Container Configuration
# ================================
# Backend service port
BACKEND_PORT=8000

# Frontend service port
FRONTEND_PORT=5173

# ================================
# Redis Configuration (Optional)
# ================================
# Redis connection URL (if using Redis for caching)
REDIS_URL=redis://localhost:6379/0
