# Backend Environment Configuration Example
# Copy this file to .env and update the values according to your environment

# Application Settings
APP_NAME=TaskFlow API
APP_VERSION=0.1.0
API_V1_STR=/api/v1
ENVIRONMENT=development
DEBUG=true

# Database Configuration
DATABASE_URL=postgresql://taskflow_user:taskflow_password@localhost:5432/taskflow
DB_USER=taskflow_user
DB_PASSWORD=taskflow_password
DB_HOST=localhost
DB_PORT=5432
DB_NAME=taskflow

# Security Settings
SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8000

# CORS Configuration
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost,http://frontend:3000

# Logging
LOG_LEVEL=INFO
